@page
@model RazorPages.Pages.KoiPage.DetailsModel

@{
    ViewData["Title"] = "Chi tiết cá Koi";
    int roleId = int.Parse(HttpContext.Session.GetString("roleId"));
    if (roleId != 2)
    {
        Response.Redirect("../Permission");
    }
}

<h1 class="product-title">@Model.KoiProfile.Koi_Name</h1>

<div class="product-detail-container">
    <div class="product-image">
        <img src="https://cakoibienhoa.com/public/userfiles/products/ca-koi-kohaku.jpg" alt="@Model.KoiProfile.Koi_Name" />
    </div>

    <div class="product-info">
        <h3>Information</h3>
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.KoiProfile.Quantity)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.KoiProfile.Quantity)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.KoiProfile.Size)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.KoiProfile.Size)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.KoiProfile.Price)
            </dt>
            <dd class="col-sm-8">
                $@Html.DisplayFor(model => model.KoiProfile.Price)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.KoiProfile.Description)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.KoiProfile.Description)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.KoiProfile.Status)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.KoiProfile.Status)
            </dd>
        </dl>

        <div class="action-buttons">
            <form method="post" asp-route-id="@Model.KoiProfile.Koi_Id">
                <div class="quantity-container">
                    <label for="quantity">Quantity:</label>
                    <input type="number" id="quantity" name="quantity" value="1" min="1" max="@Model.KoiProfile.Quantity" required />
                </div>
                <button style="margin-top:10px" type="submit" class="btn btn-success">Buy Now</button>
            </form>


            @if (Model.ErrorMessage != null)
            {
                <div class="alert alert-danger mt-2">@Model.ErrorMessage</div>
            }
        </div>
    </div>
</div>

<!-- Styles -->
<style>
    .product-title {
        font-size: 28px;
        color: #333;
        margin-bottom: 20px;
    }

    .product-detail-container {
        display: flex;
        gap: 40px;
    }

    .product-image img {
        width: 100%;
        max-width: 500px;
        height: auto;
        border-radius: 8px;
    }

    .product-info {
        flex: 1;
    }

        .product-info dl {
            margin-bottom: 20px;
        }

        .product-info dt {
            font-weight: bold;
        }

        .product-info dd {
            margin-bottom: 10px;
        }

    .quantity-input {
        margin-bottom: 20px;
    }

        .quantity-input label {
            font-weight: bold;
            margin-right: 10px;
        }

        .quantity-input input {
            width: 60px;
            padding: 5px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
            text-align: center;
        }

    .action-buttons {
        margin-top: 20px;
    }

        .action-buttons a {
            padding: 10px 20px;
            font-size: 16px;
            margin-right: 10px;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

        .action-buttons .btn-primary {
            background-color: #007bff;
            color: white;
        }

            .action-buttons .btn-primary:hover {
                background-color: #0056b3;
            }

        .action-buttons .btn-success {
            background-color: #28a745;
            color: white;
        }

            .action-buttons .btn-success:hover {
                background-color: #218838;
            }
</style>

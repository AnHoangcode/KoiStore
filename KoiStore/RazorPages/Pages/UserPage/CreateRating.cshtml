@page
@model RazorPages.Pages.UserPage.CreateRatingModel

@{
    ViewData["Title"] = "CreateRating";
}

<h1>CreateRating</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Rating.Rating_Value" class="control-label">Rating Value</label>
                <input type="range" asp-for="Rating.Rating_Value" min="0" max="5" step="0.1" class="form-control-range" id="rating-slider" />
                <span id="rating-value">@Model.Rating.Rating_Value</span>
                <span asp-validation-for="Rating.Rating_Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating.Description" class="control-label"></label>
                <input asp-for="Rating.Description" class="form-control" />
                <span asp-validation-for="Rating.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Rate" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="DetailsOrderDetail">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var slider = document.getElementById('rating-slider');
            var ratingValueDisplay = document.getElementById('rating-value');
            slider.addEventListener('input', function () {
                ratingValueDisplay.innerText = slider.value;
            });
        });
    </script>
}

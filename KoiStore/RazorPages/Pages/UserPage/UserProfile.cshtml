@page 
@model RazorPages.Pages.UserPage.UserProfileModel
@{
    ViewData["Title"] = "UserProfile";
}

<h2>User Profile</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="UserProfile.FirstName" class="control-label"></label>
        <input asp-for="UserProfile.FirstName" class="form-control" />
        <span asp-validation-for="UserProfile.FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserProfile.LastName" class="control-label"></label>
        <input asp-for="UserProfile.LastName" class="form-control" />
        <span asp-validation-for="UserProfile.LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserProfile.Email" class="control-label"></label>
        <input asp-for="UserProfile.Email" class="form-control" />
        <span asp-validation-for="UserProfile.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserProfile.PhoneNumber" class="control-label"></label>
        <input asp-for="UserProfile.PhoneNumber" class="form-control" />
        <span asp-validation-for="UserProfile.PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserProfile.Address" class="control-label"></label>
        <input asp-for="UserProfile.Address" class="form-control" />
        <span asp-validation-for="UserProfile.Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserProfile.Gender" class="control-label"></label>
        <select asp-for="UserProfile.Gender" class="form-control">
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            <option value="Other">Other</option>
        </select>
        <span asp-validation-for="UserProfile.Gender" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserProfile.DateOfBirth" class="control-label"></label>
        <input asp-for="UserProfile.DateOfBirth" class="form-control" placeholder="yyyy-MM-dd" />
        <span asp-validation-for="UserProfile.DateOfBirth" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

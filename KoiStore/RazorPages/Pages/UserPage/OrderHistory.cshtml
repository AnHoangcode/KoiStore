@page
@model RazorPages.Pages.UserPage.OrderHistoryModel

@{
    ViewData["Title"] = "Order History";
}

<h1>Your Order History</h1>

@if (Model.Orders == null || !Model.Orders.Any())
{
    <p>You have no orders yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Delivery Address</th>
                <th>Order Date</th>
                <th>Total Amount</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.Orders)
            {
                <tr>
                    <td>@order.Delivery_Address</td>
                    <td>@(order.Create_At.HasValue ? order.Create_At.Value.ToString("MM/dd/yyyy") : "N/A")</td>
                    <td>@order.Total</td>
                    <td>
                        <span class="status-badge
                            @(order.Status == "Pending" ? "badge-pending" :
                               order.Status == "Completed" ? "badge-completed" :
                               order.Status == "Cancelled" ? "badge-cancelled" : "badge-default")">
                            @order.Status
                        </span>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Thêm CSS vào cuối phần body -->
    <style>
        .status-badge {
            padding: 5px 10px;
            border-radius: 5px;
            color: white;
            font-weight: bold;
        }

        .badge-pending {
            background-color: orange;
        }

        .badge-completed {
            background-color: green;
        }

        .badge-cancelled {
            background-color: red;
        }

        .badge-default {
            background-color: gray;
        }
    </style>
}
